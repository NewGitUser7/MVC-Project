@model ME.Site.ViewModels.EmployeeDataViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EmployeeDetails</title>
</head>
<body>
    <div>
        <h4>Employee Datails</h4>
        <hr />
        <dl class="dl-horizontal">
        </dl>
        @if (Model.employeeList.Count == 0)
        {
            <p>No Employee Details Available</p>
        }
        @Html.ActionLink("Create New Employee", "CreateEmployee")
        <hr />
    </div>

    <div>
        <table class="table table-responsive table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.employee.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.employee.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.employee.Created)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.employee.Modified)
                    </th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            @if (Model.employeeList.Count > 0)

            {
                <tbody>
                    @foreach (var item in Model.employeeList)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Created)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Modified)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "EditEmployee", new { id = item.Id })
                        </td>
                        <td>
                            @Html.ActionLink("Delete", "DeleteEmployee", new { id = item.Id })
                        </td>
                        <td>
                            @Html.ActionLink("Create New Position", "CreatePosition", "Position", new { id = item.Id }, null)
                        </td>
                    </tr>
                    }
                </tbody>
            }

        </table>
    </div>
    @*<p>
        @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
        @Html.ActionLink("Back to List", "Index")
    </p>*@
</body>
</html>
